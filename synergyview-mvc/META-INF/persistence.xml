<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="ProjectDB">
		<class>uk.ac.durham.tel.synergynet.ats.collections.model.Collection</class>
		<class>uk.ac.durham.tel.synergynet.ats.collections.model.CollectionMedia</class>
		<class>uk.ac.durham.tel.synergynet.ats.collections.model.CollectionMediaClip</class>
		<class>uk.ac.durham.tel.synergynet.ats.attributes.model.Attribute</class>
		<class>uk.ac.durham.tel.synergynet.ats.annotations.model.AnnotationSet</class>
		<class>uk.ac.durham.tel.synergynet.ats.annotations.model.Annotation</class>
		<class>uk.ac.durham.tel.synergynet.ats.annotations.model.IntervalAnnotation</class>
		<class>uk.ac.durham.tel.synergynet.ats.model.PersistenceModelObject</class>
		<class>uk.ac.durham.tel.synergynet.ats.subjects.model.Subject</class>
		<class>uk.ac.durham.tel.synergynet.ats.media.model.ImportItem</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- EclipseLink should create the database schema automatically -->

			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="AttributesDB">
		<class>uk.ac.durham.tel.synergynet.ats.attributes.model.Attribute</class>
		<class>uk.ac.durham.tel.synergynet.ats.model.PersistenceModelObject</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- EclipseLink should create the database schema automatically -->

			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>
</persistence>
