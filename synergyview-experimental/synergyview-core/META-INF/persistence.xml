<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="DB">
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.Media</class>
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.PlayableMedia</class>
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.MediaInfo</class>
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.MediaTrack</class>
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.AudioMediaTrack</class>
		<class>uk.ac.durham.tel.synergynet.covanto.media.model.VideoMediaTrack</class>
		<class>uk.ac.durham.tel.synergynet.covanto.collection.model.MediaCollection</class>
		<class>uk.ac.durham.tel.synergynet.covanto.collection.model.MediaCollectionEntry</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

			<!-- EclipseLink should create the database schema automatically -->

			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>
</persistence>
